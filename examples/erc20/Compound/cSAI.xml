<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE token  [
        <!ENTITY style SYSTEM "shared.css">
        <!ENTITY supply.en SYSTEM "supply.en.js">
        <!ENTITY withdraw.en SYSTEM "withdraw.en.js">
        <!ENTITY enable.en SYSTEM "enable.en.js">
        ]>
<ts:token xmlns:ts="http://tokenscript.org/2020/03/tokenscript"
          xmlns:xhtml="http://www.w3.org/1999/xhtml"
          xmlns:xml="http://www.w3.org/XML/1998/namespace"
          xsi:schemaLocation="http://tokenscript.org/2020/03/tokenscript http://tokenscript.org/2020/03/tokenscript.xsd"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          custodian="false"
>
    <ts:name>
        <ts:string xml:lang="en">cSAI</ts:string>
    </ts:name>
    <ts:contract name="cSAI" interface="erc20">
        <ts:address network="1">0xF5DCe57282A584D2746FaF1593d3121Fcac444dC</ts:address>
    </ts:contract>
    <ts:contract name="SAI" interface="erc20">
        <ts:address network="1">0x89d24A6b4CcB1B6fAA2625fE562bDD9a23260359</ts:address>
    </ts:contract>
    <ts:origins>
        <ts:ethereum contract="cSAI"/>
    </ts:origins>
    <ts:selection id="enabled" filter="allowance>0">
        <ts:name>
            <ts:string xml:lang="en">contract already enabled</ts:string>
        </ts:name>
    </ts:selection>
    <ts:selection id="notEnabled" filter="allowance=0">
        <ts:name>
            <ts:string xml:lang="en">contract not enabled</ts:string>
        </ts:name>
    </ts:selection>
    <ts:cards>
        <!-- Do not show this card if the token contract is already enabled -->
        <ts:action exclude="enabled">
            <ts:name>
                <ts:string xml:lang="en">Enable</ts:string>
            </ts:name>
            <ts:transaction>
                <ts:ethereum function="approve" contract="SAI" as="bool">
                    <ts:data>
                        <ts:address>0xF5DCe57282A584D2746FaF1593d3121Fcac444dC</ts:address>
                        <ts:uint256>115792089237316195423570985008687907853269984665640564039457584007913129639935</ts:uint256>
                    </ts:data>
                </ts:ethereum>
            </ts:transaction>
            <ts:view xml:lang="en">
                <xhtml:style type="text/css">&style;</xhtml:style>
                <xhtml:script type="text/javascript">&enable.en;</xhtml:script>
            </ts:view>
        </ts:action>

        <ts:action exclude="notEnabled">
            <ts:name>
                <ts:string xml:lang="en">Supply</ts:string>
            </ts:name>
            <ts:attribute-type id="mintAmount" syntax="1.3.6.1.4.1.1466.115.121.1.36">
                <ts:name>
                    <ts:string xml:lang="en">Amount to supply</ts:string>
                </ts:name>
                <ts:origins>
                    <!-- e18 is a hard coded multiplier.
                    rationale for hardcoding: avoiding over-design  -->
                    <ts:user-entry as="e18"/>
                </ts:origins>
            </ts:attribute-type>
            <ts:transaction>
                <ts:ethereum function="mint" contract="cSAI" as="uint">
                    <ts:data>
                        <ts:uint256 ref="mintAmount"/>
                    </ts:data>
                </ts:ethereum>
            </ts:transaction>
            <ts:view xml:lang="en">
                <xhtml:style type="text/css">&style;</xhtml:style>
                <xhtml:script type="text/javascript">&supply.en;</xhtml:script>
            </ts:view>
        </ts:action>

        <ts:action exclude="notEnabled">
            <ts:name>
                <ts:string xml:lang="en">Withdraw</ts:string>
            </ts:name>
            <ts:attribute-type id="redeemAmount" syntax="1.3.6.1.4.1.1466.115.121.1.36">
                <ts:name>
                    <ts:string xml:lang="en">Amount to withdraw</ts:string>
                </ts:name>
                <ts:origins>
                    <ts:user-entry as="e8"/>
                </ts:origins>
            </ts:attribute-type>
            <ts:transaction>
                <ts:ethereum function="redeem" contract="cSAI" as="uint">
                    <ts:data>
                        <ts:uint256 ref="redeemAmount"/>
                    </ts:data>
                </ts:ethereum>
            </ts:transaction>
            <ts:view xml:lang="en">
                <xhtml:style type="text/css">&style;</xhtml:style>
                <xhtml:script type="text/javascript">&withdraw.en;</xhtml:script>
            </ts:view>
        </ts:action>


    </ts:cards>


        <ts:attribute-type id="allowance" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:origins>
                <ts:ethereum function="allowance" contract="SAI" as="uint">
                    <ts:data>
                        <ts:address ref="ownerAddress"/>
                        <ts:address>0xF5DCe57282A584D2746FaF1593d3121Fcac444dC</ts:address>
                    </ts:data>
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <!-- your balance in SAI (not compound SAI) -->
        <ts:attribute-type id="tokenBalance" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Balance</ts:string>
                <ts:string xml:lang="zh">餘額</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="balanceOf" contract="SAI" as="uint">
                    <ts:data>
                        <ts:address ref="ownerAddress"/>
                    </ts:data>
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <!-- SAI to cSAI exchange rate -->
        <ts:attribute-type id="exchangeRate" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Exchange Rate</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="exchangeRateCurrent" contract="cSAI" as="uint">
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <ts:attribute-type id="cTokenBalance" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Balance</ts:string>
                <ts:string xml:lang="zh">餘額</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="balanceOf" contract="cSAI" as="uint">
                    <ts:data>
                        <ts:address ref="ownerAddress"/>
                    </ts:data>
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <ts:attribute-type id="supplyInterestRate" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Supply Interest Rate</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="supplyRatePerBlock" contract="cSAI" as="uint">
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

</ts:token>
